Global DB_TOKSMD As TYPE_DB_TOKSMD
Global DBN_TOKSMD As Integer
' Index1( TOKCD + TUKKB + SMADT )

Sub TOKSMD_RClear()
DIM TmpStat
    TmpStat = Dll_RClear(DBN_TOKSMD, G_LB)
    Call ResetBuf(DBN_TOKSMD)
End Sub
