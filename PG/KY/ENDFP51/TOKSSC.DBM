Global DB_TOKSSC As TYPE_DB_TOKSSC
Global DBN_TOKSSC As Integer
' Index1( TOKCD + TUKKB + SSADT )

Sub TOKSSC_RClear()
DIM TmpStat
    TmpStat = Dll_RClear(DBN_TOKSSC, G_LB)
    Call ResetBuf(DBN_TOKSSC)
End Sub
